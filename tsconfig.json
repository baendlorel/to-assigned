{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true, // 是否生成声明文件, 选择false然后由rollup配置全权掌握
    "esModuleInterop": true, // 可选，增强兼容性
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
